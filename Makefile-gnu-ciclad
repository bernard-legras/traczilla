TARGET=win
HOME=/home/legras

SHELL = /bin/bash
FC = gfortran
CC = gcc

ifeq ($(TARGET),win)
  MAIN = TRACZILLA-win
  #FFLAGS = -O2 -fopenmp -pedantic -std=f2008 -cpp -fconvert=swap -fall-intrinsics -ffpe-trap=invalid,zero,overflow,underflow -fmax-errors=20 -I/usr/include -I/opt/anaconda/envs/p39n/include 
  FFLAGS = -O3 -std=f2008 -cpp -Wall -fconvert=swap -fall-intrinsics -finit-real=nan -ffpe-trap=invalid,zero,overflow,underflow -fmax-errors=20 -I/opt/netcdf43/gfortran49/include -I/home/legras/eccodes/include 
  #FFLAGS = -g -std=f2008 -cpp -fconvert=swap -fall-intrinsics -ffpe-trap=invalid,zero,overflow,underflow -finit-real=nan -fmax-errors=20 -I/opt/netcdf43/gfortran49/include -I/home/legras/eccodes/include 
  #FFLAGS = -O2 -fopenmp -pedantic -std=f2008 -cpp -fconvert=swap -fall-intrinsics -fmax-errors=20 -I/usr/include -I/opt/anaconda/envs/p39n/include 
  LDFLAGS1 = -L$(HOME)/BProj/lib -lcom-x64-gnu -L/opt/netcdf43/gfortran49/lib -lnetcdf -lnetcdff -L/home/legras/eccodes/lib64 -leccodes_f90 -leccodes
endif

.SUFFIXES :	.f90

.f90.mod:
	        $(FC) $(FFLAGS) -c $<

.f90.o:
	$(FC) $(FFLAGS) -c $<

#
OBJECTS0 = commons.mod date.mod coord.mod thermo.mod randme.mod io.mod interpol.mod\
isentrop_h.mod isentrop_m.mod ecmwf_diab.mod readinterpN.mod\
sphereharmspe.mod mass_iso.mod ecmwf_inct.mod merra.mod jra55.mod era5.mod combin.mod \
demar.mod advect.mod

OBJECTS1 =  TRACZILLA.o

OBJECTS2 = misc.o

$(MAIN): $(OBJECTS0) $(OBJECTS1) $(OBJECTS2)
	$(FC) *.o -o $(MAIN) $(FFLAGS) $(LDFLAGS1)
$(OBJECTS1): $(OBJECTS0) $(OBJECTS2)

.PHONY : clean
clean:
	\rm *.o 
	\rm *.mod  

